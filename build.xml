<project name="ABC-TestAbc: Core Session" default="build" basedir=".">
    <!-- Run composer update and executes various other updates -->
    <target name="update">
        <exec command="composer update" checkreturn="true" passthru="true"/>
    </target>

    <!-- Runs ApiGen -->
    <target name="apigen">
        <exec command="apigen generate --todo --tree --source src --destination doc" passthru="true" checkreturn="true"/>
    </target>

    <target name="unit-before">
        <copy file="test/C.txt" tofile="test/C.php" overwrite="true" haltonerror="true"/>
        <symlink target="../../vendor/setbased/abc-babel-core/lib/psql/" link="lib/psql/abc-babel-core"/>
        <exec command="cat test/ddl/0010_create_database.sql                             | mysql -v -u root"      passthru="true" checkreturn="true"/>
        <exec command="cat test/ddl/0020_create_user.sql                                 | mysql -v -u root"      passthru="true" checkreturn="true"/>
        <exec command="cat vendor/setbased/abc-company/lib/ddl/0100_create_tables.sql    | mysql -v -u root test" passthru="true" checkreturn="true"/>
        <exec command="cat vendor/setbased/abc-profile/lib/ddl/0100_create_tables.sql    | mysql -v -u root test" passthru="true" checkreturn="true"/>
        <exec command="cat vendor/setbased/abc-babel-core/lib/ddl/0100_create_tables.sql | mysql -v -u root test" passthru="true" checkreturn="true"/>
        <exec command="cat vendor/setbased/abc-user/lib/ddl/0100_create_tables.sql       | mysql -v -u root test" passthru="true" checkreturn="true"/>
        <exec command="cat lib/ddl/0100_create_tables.sql                                | mysql -v -u root test" passthru="true" checkreturn="true"/>
        <exec command="cat test/ddl/0200_abc_auth_company.sql                            | mysql -v -u root test" passthru="true" checkreturn="true"/>
        <exec command="cat test/ddl/0200_abc_babel_word_group.sql                        | mysql -v -u root test" passthru="true" checkreturn="true"/>
        <exec command="cat test/ddl/0210_abc_auth_profile.sql                            | mysql -v -u root test" passthru="true" checkreturn="true"/>
        <exec command="cat test/ddl/0210_abc_babel_word.sql                              | mysql -v -u root test" passthru="true" checkreturn="true"/>
        <exec command="cat test/ddl/0220_abc_babel_language.sql                          | mysql -v -u root test" passthru="true" checkreturn="true"/>
        <exec command="cat test/ddl/0230_abc_auth_user.sql                               | mysql -v -u root test" passthru="true" checkreturn="true"/>
        <exec command="bin/stratum stratum test/etc/stratum.cfg" passthru="true" checkreturn="true"/>
        <copy file="test/C.php" tofile="test/C.txt" overwrite="true" haltonerror="true"/>
    </target>

    <!-- Runs all unit tests -->
    <target name="unit" depends="unit-before">
        <exec command="bin/phpunit" passthru="true" checkreturn="true"/>
    </target>

    <target name="build">
        <echo message=""/>
    </target>
</project>
